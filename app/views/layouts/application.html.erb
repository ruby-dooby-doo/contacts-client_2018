<!DOCTYPE html>
<html>
  <head>
    <title>ContactsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <a href="/client/contacts">Home</a>
    <a href="/client/contacts/new">New Contact</a>
    <a href="/client/signup">Sign Up</a>
    <a href="/client/login">Log In</a>
    <a href="/client/logout" data-method="delete">Log Out</a>

    <% flash.each do |name, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
